<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <%= yield_content(:head) %>
    <title><%= yield_content(:title) || current_page.data.title %></title>

    <%= stylesheet_link_tag "normalize", "all", "products", "home" %>
    <%= javascript_include_tag  "all" %>
    <link rel="shortcut icon" href="/images/fok-chow-logo.ico" type="image/x-icon" />
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
