!!! 5
%html
  %head
    %meta{:charset => 'utf-8'}

    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => 'IE=edge,chrome=1', :'http-equiv' => 'X-UA-Compatible'}
    = yield_content :head
    %title
      = yield_content :title || current_page.data.title
    = stylesheet_link_tag 'all'
    = javascript_include_tag 'all'
    %link{:rel => 'shortcut icon', :href => image_path('fok-chow-logo.ico'), :type => 'image/x-icon'}

  %body{:class => page_classes}
    %section.centre-column
      %header
        = image_tag('fok-chow-logo.svg', class: 'logo')
        %ul.product
          - data.products.each do |_, product|
            %li{:class => product.id}
              %a.name{:href => "/products/#{product.id}"}= product.title
      %main= yield
      %footer
        .address='434 St. Kilda Rd Melbourne 3000'
        %ul.social
          - data.social.each do |id, media|
            %li{:class => [:account, id] }
              %a.name{:href => media.url, :target => '_blank'}=media.title